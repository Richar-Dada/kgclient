
.container {
	font-size: 14px;
	line-height: 24px;
	background-color: #FFFFFF;
}
.content {
	width: 60%;
	margin: 20rpx auto;
}
button {
	margin-top: 30rpx;
}
image {
	width: 100%;
}
.upload-header {
	margin-top: 10rpx;
}
.upload-body {
	margin-top: 0;
	padding-bottom: 15rpx;
}
.form-item {
	position: relative;
}
.form-item::before {
	position: absolute;
	z-index: 10;
	right: 0;
	bottom: 0;
	left: 0;
	height: 1px;
	content: '';
	-webkit-transform: scaleY(.5);
	        transform: scaleY(.5);
	background-color: #c8c7cc;
}
.submit-Button {
	margin-top: 20rpx;
}
.uni-uploader__file {
	position: relative;
}
.delete-btn {
	position: absolute;
	top: -8px;
	right: 18px;
	width: 20rpx;
	height: 20rpx;
}
.business-panel {
	border-radius: 5px;
	background-color: #FFFFFF;
}


