.form-item {
	position: relative;
}
.form-item::before {
	position: absolute;
	z-index: 10;
	right: 0;
	bottom: 0;
	left: 0;
	height: 1px;
	content: '';
	-webkit-transform: scaleY(.5);
	        transform: scaleY(.5);
	background-color: #c8c7cc;
}
